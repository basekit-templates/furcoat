{% extends "layout.twig" %}

{% block content %}
<header>
{{widget('companyheader', 'companyheader', {"defaultlogo": asset('furcoat/images/furcoat-logo.png')})|raw}}
{{widget('extendednavigation', 'navigationheader', {"align":"center"})|raw}}
{{widget('button', 'button', {italic: 'true', text:'button'})|raw}}

</header>

{{zone('main')|raw}}

<footer>
{{widget('companyaddress', 'companyaddressfooter', {"bkprofileaddress":profile.address, 
"bkprofileaddress1":profile.address1, "bkprofileaddress2":profile.address2, 
"bkprofilepostalcode":profile.postalcode, "bkprofilecountry":profile.country})|raw}}
</footer>
{% endblock %}
